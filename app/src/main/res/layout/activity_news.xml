            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/new_detail_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30dp"
                android:padding="15dp" />
